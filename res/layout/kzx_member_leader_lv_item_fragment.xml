<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionBtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp" >

    <com.android.yijiang.kzx.widget.imageview.CircleImageView
        android:id="@+id/user_bg"
        android:layout_width="@dimen/user_cover_middle_width"
        android:layout_height="@dimen/user_cover_middle_height"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_avatar_120" />

    <LinearLayout
        android:id="@+id/medal_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_bg"
        android:gravity="left|center"
        android:orientation="vertical"
        android:paddingLeft="12dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/leaderNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left|center"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/theme_normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_kzx_reason_position" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/reason_bg"
            android:gravity="left|center"
            android:orientation="vertical"
            android:padding="6dp" >

            <TextView
                android:id="@+id/contentTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/theme_normal" />

            <TextView
                android:id="@+id/createTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawableLeft="@drawable/ic_time_grey_12"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:gravity="left|center"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#999" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>