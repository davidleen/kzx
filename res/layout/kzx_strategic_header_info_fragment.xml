<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.android.yijiang.kzx"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/topContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_shadow"
        android:gravity="top|center"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/targetTitleIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/targetTitleTv"
                android:src="@drawable/kzx_ic_add_task_book" />

            <com.android.yijiang.kzx.widget.FloatLabeledEditText
                android:id="@+id/targetTitleTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/targetTitleIv"
                android:hint="@string/target_title_hint"
                app:fletFloatingHint="@string/target_title_hint"
                app:fletHintTextColor="#777777"
                app:fletTextGravity="left|center" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/targetTimeIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/targetTimeTv"
                android:src="@drawable/kzx_ic_add_task_time" />

            <com.android.yijiang.kzx.widget.FloatLabeledEditText
                android:id="@+id/targetTimeTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/targetTimeIv"
                android:hint="@string/target_time_hint"
                app:fletFloatingHint="@string/target_time_hint"
                app:fletHintTextColor="#777777"
                app:fletTextGravity="left|center" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/targetDescriptionIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/targetDescriptionTv"
                android:src="@drawable/kzx_ic_flag" />

            <com.android.yijiang.kzx.widget.FloatLabeledEditText
                android:id="@+id/targetDescriptionTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/targetDescriptionIv"
                android:hint="@string/target_content_hint"
                app:fletFloatingHint="@string/target_content_hint"
                app:fletHintTextColor="#777777"
                app:fletTextGravity="left|center" />
        </RelativeLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/completeStandardIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/completeStandardTv"
                android:src="@drawable/kzx_ic_add_task_list" />

            <com.android.yijiang.kzx.widget.FloatLabeledEditText
                android:id="@+id/completeStandardTv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/completeStandardIv"
                android:hint="@string/target_get_hint"
                app:fletFloatingHint="@string/target_get_hint"
                app:fletHintTextColor="#777777"
                app:fletTextGravity="left|center" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topContent"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:gravity="left|center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:background="@drawable/kzx_ic_add_task_user" />

        <TextView
            android:id="@+id/dutyersTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|center"
            android:paddingTop="1dp"
            android:text="@string/target_amount_hint"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#2588d4" />
    </LinearLayout>


</RelativeLayout>