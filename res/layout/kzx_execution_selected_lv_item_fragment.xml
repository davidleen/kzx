<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.android.yijiang.kzx"
    android:id="@+id/actionBtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_selector2"
    android:gravity="left|center"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp" >

    <com.android.yijiang.kzx.widget.imageview.CircleImageView
        android:id="@+id/user_bg"
        android:layout_width="@dimen/user_cover_middle_width"
        android:layout_height="@dimen/user_cover_middle_height"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_avatar_120" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="12dp" >

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left|center"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/theme_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTv"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/departmentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_kzx_department"
                android:drawablePadding="6dp"
                android:gravity="left|center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#777777" />

            <TextView
                android:id="@+id/amountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="left|center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#444444" />
        </LinearLayout>
    </RelativeLayout>

    <CheckBox
        android:id="@+id/switchBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="6dp"
        android:background="@drawable/checkbox_copy_style"
        android:button="@null"
        android:checked="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</LinearLayout>